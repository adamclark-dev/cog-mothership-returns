{% extends 'Message:Mothership:Commerce::order:detail:view' %}

{% block order_content %}
	<section class="container-content">
		<section class="repeatable-group">
			{% if not returns is empty %}
				{% for return in returns %}
					{{ render(controller('Message:Mothership:OrderReturn::Controller:OrderReturn:Order:Detail#view', { 'returnID' : return.id } )) }}
				{% endfor %}
			{% else %}
				<p>{{ 'ms.commerce.order.return.none'|trans }}</p>
			{% endif %}
		</section>
	</section>
{% endblock %}